	</head>
	<body>
		<header>
			<nav class="navbar">
				<div class="logo"><a href="{{ path('app_principal') }}">Gestion de sejour</a></div>
				<ul class="nav-links">
					<li><a href="{{ path('app_principal') }}">Accueil</a></li>
					<li><a href="{{ path('app_auth') }}">Authentification</a></li>
				</ul>
			</nav>
		</header>

		<main>
			{% block body %}{% endblock %}
		</main>
	</body>
