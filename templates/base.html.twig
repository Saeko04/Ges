<!DOCTYPE html>
<html>
	<head>
		<meta charset="UTF-8">
		<title>
			{% block title %}Hospice Tale
			{% endblock %}
		</title>
		<link rel="icon" href="{{ asset('logo-navbar.ico')}}">

		{% block stylesheets %}
			<link rel="stylesheet" href="{{ asset('styles/app.css') }}">
		{% endblock %}

		{% block javascripts %}
			{% block importmap %}
				{{ importmap('app') }}
			{% endblock %}
		{% endblock %}
	</head>
	<body>
		<header>
			<nav class="navbar">
				<div class="logo">
					<a href="{{ path('app_principal') }}">
						<img src="{{ asset('logo.png') }}" alt="Logo Gestion des séjours et des patients">
						<span>Gestion des séjours et des patients</span>
					</a>
				</div>
				<ul class="nav-links">
					<li>
						<a href="{{ path('app_principal') }}">Accueil</a>
					</li>
					{% if app.user %}
						<li>
							<a href="{{ path('app_dashboard') }}">Dashboard</a>
						</li>
						<li>
							<a href="{{ path('app_logout') }}">Déconnexion</a>
						</li>
					{% else %}
						<li>
							<a href="{{ path('app_auth') }}">Authentification</a>
						</li>
					{% endif %}
				</ul>
			</nav>
		</header>

		<main>
			{% block body %}{% endblock %}
		</main>
	</body>
</html>
