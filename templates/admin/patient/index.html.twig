{% extends 'base.html.twig' %}

{% block title %}Gestion Patients{% endblock %}

{% block body %}
<h1>Gestion des patients</h1>

<a href="{{ path('patient_new') }}" class="btn-add-patient">Ajouter un patient</a>

<table border="1" cellpadding="5">
    <tr>
        <th>Prénom</th>
        <th>Nom</th>
        <th>Date Naissance</th>
        <th>Sexe</th>
        <th>Actions</th>
    </tr>
    {% for patient in patients %}
        <tr>
            <td>{{ patient.prenom }}</td>
            <td>{{ patient.nom }}</td>
            <td>{{ patient.dateNaissance|date('d/m/Y') }}</td>
            <td>{{ patient.sexe }}</td>
            <td>
                <a href="{{ path('patient_edit', {'id': patient.id}) }}" class="btn-modifier">Modifier</a>
            </td>
        </tr>
    {% endfor %}
</table>

<a href="{{ path('app_dashboard') }}" class="btn-back-dashboard">⬅ Retour au dashboard</a>
{% endblock %}
